<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andromojo.bustimings">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BusTimings">
        <activity
            android:name=".BusStationDataActivity"
            android:exported="false"
            android:label="Station Info"/>
        <activity
            android:name=".ReservedStateDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".SearchBusDataActivity"
            android:exported="false"
            android:label="Bus Details" />
        <activity
            android:name=".ToUserDataActivity"
            android:exported="false"
            android:label="Search Destination" />
        <activity
            android:name=".FromUserDataActivity"
            android:exported="false"
            android:label="Search Source" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>